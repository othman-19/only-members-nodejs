<% if (messages.error) { %>
  <div class="notification is-warning m-3">
    <button class="delete"></button>
    <p><%= messages.error %></p>
  </div>
<% } %>

<% if (locals.errors) { %>
  <div class="notification is-warning m-3">
    <button class="delete"></button>
    <ul>
      <% locals.errors.forEach(function(error){ %>
        <li> <strong>Warning!</strong> <%= error.msg %> </li>
      <% }); %>
    </ul>
  </div>
<% } %>

<% if (messages.success) { %>
  <div class="notification is-success m-3">
    <button class="delete"></button>
    <p><%= messages.success %></p>
  </div>
  
<% } %>
<% if (messages.info) { %>
  <div class="notification is-info m-3">
    <button class="delete"></button>
    <p><%= messages.info %></p>
  </div>
<% } %>
<% if (messages.danger) { %>
  <div class="notification is-danger m-3">
    <button class="delete"></button>
    <p><%= messages.danger %></p>
  </div>
<% } %>


