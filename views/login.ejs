<div class="container">
  <% if (message.length > 0) { %>
    <div>
      <strong>Warning!</strong> <%= message %>.
    </div>
  <% } %>
  <h2>Please Sign In</h2>
  <form action="/login" method="post">
    <label for="userName">User name</label>
    <input type="text" id="userName" name="userName" placeholder="User Name" required value=<%= locals.user.username ? locals.user.username : "" %>>

    <label for="password">Password</label>
    <input type="password" id="password" name="password" placeholder="Password" required value=<%= locals.user.password ? locals.user.password : "" %>>

    <button type="submit">Sign in</button> 

    <br> 

    <p>Don't have an account? <a href="/register">Signup</a>,it's free.</p>
  </form>
</div>
  