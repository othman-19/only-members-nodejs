<div class="container">
  <% if (locals.errors) { %>
    <ul>
    <% locals.errors.forEach(function(error){ %>
      <li> <strong>Warning!</strong> <%= error.msg %> </li>
    <% }); %>
    </ul>
  <% } %>
  
  <h2>Please Sign In</h2>
  <form action="/login" method="post">
    <label for="email">User name</label>
    <input type="text" id="email" name="email" placeholder="User Name" required >

    <label for="password">Password</label>
    <input type="password" id="password" name="password" placeholder="Password" required>

    <button type="submit">Sign in</button> 

    <br> 

    <p>Don't have an account? <a href="/register">Register</a>,it's free.</p>
  </form>
</div>
  