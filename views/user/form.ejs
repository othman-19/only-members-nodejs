<div class="container">
  <% if (locals.errors) { %>
    <ul>
    <% locals.errors.forEach(function(error){ %>
      <li> <%= error.msg %> </li>
    <% }); %>
    </ul>
  <% } %>
  <h2>Please Register</h2>
  <form action="/users/create" method="post">
    <label for="userName">User name</label>
    <input type="text" id="userName" name="userName" placeholder="User Name" required value=<%= locals.user.username ? locals.user.username : "" %>>

    <label for="firstName">First name</label>
    <input type="text" id="firstName" name="firstName" placeholder="First Name" required value=<%= locals.user.firstName ? locals.user.firstName : "" %>>

    <label for="lastName">Last name</label>
    <input type="text" id="lastName" name="lastName" placeholder="Last Name" required value=<%= locals.user.lastName ? locals.user.lastName : "" %>>

    <label for="email">Email address</label>
    <input type="email" id="email" name="email" placeholder="Email address" required value=<%= locals.user.email ? locals.user.email : "" %>>

    <label for="password">Password</label>
    <input type="password" id="password" name="password" placeholder="Password" required value=<%= locals.user.password ? locals.user.password : "" %>>

    <label for="passwordConfirmation">Confirme Password</label>
    <input type="password" id="passwordConfirmation" name="passwordConfirmation" placeholder="Confirme Password" required value=<%= locals.user.passwordConfirmation ? locals.user.passwordConfirmation : "" %>>

    <button type="submit">Sign up</button> 
    <br> 
    <p>Do you have an account? <a href="/login">Sign In</a></p>
  </form>
</div>
