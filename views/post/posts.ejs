<h1>hi <%= currentUser.userName %></h1>
<a href="posts/create"> New Message</a>
<p>Welcome to <%= title %></p>
<div>
  <% const posts = locals.posts %>
    <dl>
      <% posts.forEach(post => { %>
        <dt> <%= post.title %></dt>
        <dd> <%= post.text %></dd>
        <% if (post.author) { %>
          <dd> <%= post.author.fullName %></dd>
          <dd> <%= post.author.createdAt %></dd>
        <% }; %>
        <br>
        <hr>
    </dl>
  <% }); %>
</div>